<%- include('partials/header') %>

<div class="hero-section">
    <div class="container">
        <h1 class="hero-title">
            <i class="fas fa-paper-plane"></i>
            ShareInAir
        </h1>
        <p class="hero-subtitle">Share files and text instantly, no registration required!</p>
        <div class="hero-features">
            <div class="feature">
                <i class="fas fa-upload"></i>
                <span>Up to 20MB per file</span>
            </div>
            <div class="feature">
                <i class="fas fa-clock"></i>
                <span>60 minutes expiry</span>
            </div>
            <div class="feature">
                <i class="fas fa-lock"></i>
                <span>Private sharing available</span>
            </div>
        </div>
        <div class="hero-actions">
            <a href="/upload" class="btn btn-primary">
                <i class="fas fa-cloud-upload-alt"></i>
                Upload Files
            </a>
            <a href="/text" class="btn btn-secondary">
                <i class="fas fa-file-alt"></i>
                Share Text
            </a>
        </div>
    </div>
</div>

<section class="features-section">
    <div class="container">
        <h2 class="section-title">Why Choose ShareInAir?</h2>
        <div class="features-grid">
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-rocket"></i>
                </div>
                <h3>Fast & Simple</h3>
                <p>No registration needed. Just upload and share instantly.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3>Secure Sharing</h3>
                <p>Private mode with secret keys for sensitive content.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-file-archive"></i>
                </div>
                <h3>Multiple Files</h3>
                <p>Upload up to 10 files at once, 20MB each.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-text-height"></i>
                </div>
                <h3>Text Sharing</h3>
                <p>Share large text content without file uploads.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-hourglass-half"></i>
                </div>
                <h3>Auto-Expiry</h3>
                <p>Content expires 60 minutes after last access.</p>
            </div>
            <div class="feature-card">
                <div class="feature-icon">
                    <i class="fas fa-link"></i>
                </div>
                <h3>Share Links</h3>
                <p>Get unique links for easy sharing anywhere.</p>
            </div>
        </div>
    </div>
</section>

<!-- Recent Shared Content Section -->
<% if (recentTexts && recentTexts.length > 0 || recentFiles && recentFiles.length > 0) { %>
<section class="recent-content-section">
    <div class="container">
        <h2 class="section-title">Recently Shared on This Network</h2>
        
        <div class="content-tabs">
            <% if (recentTexts && recentTexts.length > 0) { %>
            <div class="tab-section">
                <h3><i class="fas fa-file-alt"></i> Recent Texts</h3>
                <div class="text-list">
                    <% recentTexts.forEach(text => { %>
                        <div class="text-item">
                            <p class="text-preview"><%= text.text %></p>
                            <div class="text-meta">
                                <span class="text-time">
                                    <i class="fas fa-clock"></i>
                                    <%= new Date(text.uploadTime).toLocaleString() %>
                                </span>
                                <a href="/view/text/<%= text.id %>" class="btn btn-small">
                                    <i class="fas fa-eye"></i>
                                    View
                                </a>
                            </div>
                        </div>
                    <% }) %>
                </div>
            </div>
            <% } %>

            <% if (recentFiles && recentFiles.length > 0) { %>
            <div class="tab-section">
                <h3><i class="fas fa-file"></i> Recent Files</h3>
                <div class="file-list">
                    <% recentFiles.forEach(fileData => { %>
                        <div class="file-item">
                            <div class="file-info">
                                <i class="fas fa-file-archive"></i>
                                <div class="file-details">
                                    <span class="file-name">
                                        <%= fileData.fileCount %> file<%= fileData.fileCount > 1 ? 's' : '' %> shared
                                    </span>
                                    <span class="file-time">
                                        <%= new Date(fileData.uploadTime).toLocaleString() %>
                                    </span>
                                </div>
                            </div>
                            <a href="/view/file/<%= fileData.id %>" class="btn btn-small">
                                <i class="fas fa-download"></i>
                                Download
                            </a>
                        </div>
                    <% }) %>
                </div>
            </div>
            <% } %>
        </div>
    </div>
</section>
<% } %>

<section class="cta-section">
    <div class="container">
        <h2>Ready to Share?</h2>
        <p>Start sharing files and text instantly with ShareInAir</p>
        <div class="cta-buttons">
            <a href="/upload" class="btn btn-primary">Upload Files</a>
            <a href="/private" class="btn btn-outline">Private Share</a>
        </div>
    </div>
</section>

<%- include('partials/footer') %>